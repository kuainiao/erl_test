<erl>
out( A ) ->
	GetArg = case yaws_api:parse_query(A) of
				[{"url", ""}] -> {redirect, "/"};
				[{"url", Url}] -> Url;
				_ -> {redirect, "/"}
			end,
	IsLogin = 
		case gcp_event:api(A, "account", {"isSession"}) of
			{ok, UserName} -> UserName;
			"{\"state\":\"105\",\"msg\":\"\"}" -> []
		end,
	[{bindings, [{"username", IsLogin}]}, {bindings, [{"getarg", GetArg}]}, {ssi, "/inc/meta.inc", "", ""}].
</erl>

